<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="com.bulletin.theinvincible.bulletin.GeneralDetail">

    <TextView
        android:id="@+id/id_headline_second_business"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#e90a0a"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/id_author_second_business"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_headline_second_business"
        android:layout_marginTop="10dp"
        android:textColor="#08ff21"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/id_details_second_business"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_author_second_business"
        android:layout_marginTop="40dp"
        android:textColor="#000000" />
</RelativeLayout>
